{
  "name": "tiknova",
  "version": "1.0.0",
  "description": "TikTok Live Bot with Electron + React + TTS",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"node signServer.js\" \"vite\" \"npx wait-on http://localhost:5173 && electron .\"",
    "vite": "vite",
    "electron": "electron .",
    "build": "vite build",
    "preview": "vite preview",
    "start": "electron .",
    "test": "echo \"No tests configured\"",
    "dist": "npm run build && electron-builder"
  },
  "author": "Keith Jeter",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.6.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "electron": "^29.0.0",
    "express": "^4.18.2",
    "play-sound": "^1.1.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "tiktok-live-connector": "^2.0.7-beta1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^8.2.2",
    "electron-builder": "^26.0.12",
    "vite": "^5.4.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.tiknova.app",
    "productName": "TikTok Bot",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "sounds/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  }
}
